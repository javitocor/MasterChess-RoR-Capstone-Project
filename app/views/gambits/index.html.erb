<p id="notice"><%= notice %></p>

<h1>Gambits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gambits.each do |gambit| %>
      <tr>
        <td><%= link_to 'Show', gambit %></td>
        <td><%= link_to 'Edit', edit_gambit_path(gambit) %></td>
        <td><%= link_to 'Destroy', gambit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gambit', new_gambit_path %>
