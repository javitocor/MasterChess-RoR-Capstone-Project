<% provide(:title, "#{@user.username}") %>
<div class="container">
  <div class="col-md-8 bg-secondary"> 
        <div>asdasdsada</div>         
          <div class="form-group bg-white">
            <form>
                <div class="form-group">
                    <label for="comment">Gambit to <%= @user.username %>:</label>
                    <textarea class="form-control" rows="2" id="comment"></textarea>
                </div>
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Gambit</button>
            </form>
          </div>
          <h3 class="my-4">Your Recent Gambits</h3>

          <!-- Blog Post -->
          <div class="list-group">
              <%= render @gambits %>
          </div>

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-3">
            <div>
              <div class="card text-center">
                <% if @user.avatar.attached? %>
                  <%= image_tag @user.avatar, class:'rounded-circle card-img-top', size: "100x100" %>
                <% else %>
                  <%= image_tag('avatar_default.jpg', class:'rounded-circle card-img-top', size: "100x100") %>
                <% end %>
                <div class="card-body">
                  <p class="card-title"><%= @user.username %></p>
                  <p class="card-text"><%= @user.fullname %></p>
                  <% if current_user != @user %>
                    <%= link_to follow_or_unfollow_btn(@user) %>
                  <% end %>

                </div>
              </div>
              <div class="info-user">
                <div class="user-info">
                  <div><%= @user.gambits.count %></div>
                  <div>Gambits</div>
                </div>
                <div class="user-info">
                  <div><%= @user.friends.count %></div>
                  <div>Following</div>
                </div>
                <div class="user-info">
                  <div><%= @user.followers.count %></div>
                  <div>Followers</div>
                </div>
              </div>
            </div>
          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">FOLLOWED BY:</h5>
            <div class="card-body">
              <div class="input-group">
                <ul class="list-unstyled mb-0">
                    <li>
                      <%#= link_to @user.friends.sample.username, user_path(User.find_by_username(@user.friends.sample.username)) %>
                    </li>
                    <li>
                      <%#= link_to @user.friends.sample.username, user_path(User.find_by_username(@user.friends.sample.username)) %>
                    </li>
                    <li>
                      <%#= link_to @user.friends.sample.username, user_path(User.find_by_username(@user.friends.sample.username)) %>
                    </li>
                  </ul>
              </div>
            </div>
          </div> 
  </div>
</div>




